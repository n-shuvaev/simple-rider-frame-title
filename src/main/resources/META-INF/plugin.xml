<idea-plugin>
    <id>com.github.nshuvaev.simpleriderframetitle</id>
    <name>simple-rider-frame-title</name>
    <vendor>n-shuvaev</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.nshuvaev.simpleriderframetitle.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.nshuvaev.simpleriderframetitle.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.nshuvaev.simpleriderframetitle.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
